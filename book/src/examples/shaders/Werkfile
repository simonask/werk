config default = "build"

let glslc = which "glslc"
let tar = which "tar"

build "%.(frag|vert|comp).spv" {
    from "{%}.{0}"
    depfile "{%}.{0}.d"
    run "{glslc} -MD -MF <depfile> -o <out> <in>"
}

build "shaders.tar.gz" {
    # Note: Using "native" glob syntax.
    from glob "*.\{frag,vert,comp\}" | map "{}.spv"
    run "{tar} -zcf <out> <in*>"
}

task build {
    build "shaders.tar.gz"
}
